@model Localink.UserCenter.AspNetIdentity.Entitys.AppUser
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}


<div class="cl pd-20" style=" background-color:#5bacb6">
    <img class="avatar size-XL l" src="static/h-ui/images/user.png">
    <dl style="margin-left:80px; color:#fff">
        <dt><span class="f-18">@Model.FirstName&nbsp;@Model.LastName</span></dt>
        <dd class="pt-10 f-12" style="margin-left:0">这家伙很懒，什么也没有留下</dd>
    </dl>
</div>
<div class="pd-20">
    <table class="table">
        <tbody>
            <tr>
                <th class="text-r" width="80">性别：</th>
                <td>
                    @{
                    if (Model.Gender)
                    {
                        @Html.Raw("男")
                    }
                    else
                    {
                        @Html.Raw("女")
                    }
                }
            </td>
        </tr>
        <tr>
            <th class="text-r">手机：</th>
            <td>@Model.PhoneNumber</td>
        </tr>
        <tr>
            <th class="text-r">邮箱：</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th class="text-r">地址：</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th class="text-r">注册时间：</th>
            <td>@Model.RegisterTime.ToString("yyyy-MM-dd")</td>
        </tr>
    </tbody>
</table>
</div>